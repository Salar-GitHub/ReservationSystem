@page
@model LoginModel

@{
    ViewData["Title"] = "Log in";
}
<link rel="stylesheet" href="~/css/login.css" />


<div class="center-wrap">
    <div>
        <section >
            <form id="account" method="post">
                <div class="flex-wrap">
                    <h2 class="center">Log In</h2>
                    <hr />
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-floating">
                        <input class="form-control" placeholder="Email" asp-for="Input.Email"  autocomplete="username" aria-required="true" />
                        <label asp-for="Input.Email"></label>
                        <span asp-validation-for="Input.Email" class="text-danger"></span>
                    </div>
                    <div class="form-floating">
                        <input class="form-control" placeholder="Password" asp-for="Input.Password" autocomplete="current-password" aria-required="true" />
                        <label asp-for="Input.Password"></label>
                        <span asp-validation-for="Input.Password" class="text-danger"></span>
                    </div>
                    <div class="center">
                        <div >
                            <label asp-for="Input.RememberMe" class="form-label center check">
                                <input class="form-check-input t" asp-for="Input.RememberMe" />
                                @Html.DisplayNameFor(m => m.Input.RememberMe)
                            </label>
                        </div>
                    </div>
                    <div>
                        <button id="login-submit" class="btn btn-lg btn-light w-100" type="submit">Log in</button>
                    </div>
                    
                </div>
                <div class="spacer"></div>
                <div class="center extra-links">
                        <p>
                            <a class="link center" id="forgot-password" asp-page="./ForgotPassword">Forgot your password?</a>
                        </p>
                        <p>
                            <a class="link center" asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl">Register as a new user</a>
                        </p>
                        <p>
                            <a class="link center" id="resend-confirmation" asp-page="./ResendEmailConfirmation">Resend email confirmation</a>
                        </p>
                   </div>
            </form>
        </section>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
